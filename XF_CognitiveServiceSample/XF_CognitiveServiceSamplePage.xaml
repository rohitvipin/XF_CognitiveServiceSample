<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:XF_CognitiveServiceSample" x:Class="XF_CognitiveServiceSample.XF_CognitiveServiceSamplePage" Title="Photo Analysis">
	<ContentPage.Padding>
		<OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" Android="0, 0, 0, 0" WinPhone="0, 0, 0, 0" />
	</ContentPage.Padding>
	<ScrollView VerticalOptions="FillAndExpand">
		<StackLayout VerticalOptions="FillAndExpand" Spacing="10" Padding="10">
			<Label x:Name="titleLabel" HorizontalOptions="FillAndExpand" VerticalOptions="Start" FontSize="Large" />
			<Image x:Name="selectedImage" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" HeightRequest="400" />
			<Label x:Name="descLabel" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" FontSize="Medium" />
			<StackLayout VerticalOptions="End" Spacing="10" Padding="10" Orientation="Horizontal">
				<Button Text="Take Photo" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="ClickPhotoButton_Clicked" BackgroundColor="Blue" TextColor="White" />
				<Button Text="Pick Photo" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="PickPhotoButton_Clicked" BackgroundColor="Blue" TextColor="White" />
			</StackLayout>
		</StackLayout>
	</ScrollView>
</ContentPage>